<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:elevation="15dp"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/menuImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        app:srcCompat="@drawable/submenu" />

    <TextView
        android:id="@+id/menuName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_above="@+id/menuPrice"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_toEndOf="@+id/menuImage"
        android:layout_toRightOf="@+id/menuImage"
        android:text="menu"
        android:textSize="20sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/menuPrice"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/menuImage"
        android:layout_alignLeft="@+id/menuName"
        android:layout_alignStart="@+id/menuName"
        android:layout_marginBottom="13dp"
        android:text="menuPrice"
        android:textSize="13sp"
        android:typeface="serif" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:drawable/ic_delete"
        android:layout_alignRight="@+id/menuName"
        android:layout_alignEnd="@+id/menuName"
        android:layout_alignTop="@+id/menuName" />

</RelativeLayout>
