<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tarun.ordernow.MainActivity"
    android:background="@drawable/backgroundvalues">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            xmlns:card_view="https://schemas.android.com/apk/res-auto"
            card_view:cardCornerRadius="100dp"
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:elevation="15dp"
            android:id="@+id/subwayCard"
            android:background="@color/cardview_light_background"
            android:layout_margin="25dp">

            <ImageButton
                android:id="@+id/subway"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="menuList"
                android:layout_alignParentTop="true"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/subwaylogo" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:elevation="15dp"

            android:background="@color/cardview_light_background"
            android:id="@+id/qudobaCard"
            android:layout_marginTop="120dp"
            android:layout_alignTop="@+id/subwayCard"
            android:layout_alignLeft="@+id/subwayCard"
            android:layout_alignStart="@+id/subwayCard"
            android:layout_alignRight="@+id/subwayCard"
            android:layout_alignEnd="@+id/subwayCard"
            >

            <ImageButton
                android:id="@+id/qdoba"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:onClick="menuList"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/qdobalogo" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:elevation="15dp"

            android:background="@color/cardview_light_background"
            android:layout_below="@+id/qudobaCard"
            android:id="@+id/tacobell"
            android:layout_alignLeft="@+id/subwayCard"
            android:layout_alignStart="@+id/subwayCard"
            android:layout_alignRight="@+id/subwayCard"
            android:layout_alignEnd="@+id/subwayCard"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/taco"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="menuList"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/tacologo" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:elevation="15dp"

            android:background="@color/cardview_light_background"
            android:layout_below="@+id/tacobell"
            android:id="@+id/starbuckscard"
            android:layout_alignLeft="@+id/subwayCard"
            android:layout_alignStart="@+id/subwayCard"
            android:layout_alignRight="@+id/subwayCard"
            android:layout_alignEnd="@+id/subwayCard"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/starbucks"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="menuList"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/starbuckslogo" />
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:elevation="15dp"

            android:background="@color/cardview_light_background"
            android:layout_below="@+id/starbuckscard"
            android:id="@+id/pandaexpresscard"
            android:layout_alignLeft="@+id/subwayCard"
            android:layout_alignStart="@+id/subwayCard"
            android:layout_alignRight="@+id/subwayCard"
            android:layout_alignEnd="@+id/subwayCard"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/pandaexpress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="menuList"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/pandalogo" />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:elevation="15dp"

            android:background="@color/cardview_light_background"
            android:layout_below="@+id/pandaexpresscard"
            android:id="@+id/carlsjrcard"
            android:layout_alignLeft="@+id/subwayCard"
            android:layout_alignStart="@+id/subwayCard"
            android:layout_alignRight="@+id/subwayCard"
            android:layout_alignEnd="@+id/subwayCard"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/carlsjr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="menuList"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:padding="0dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/carlslogo" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>
